<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tela_5"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_margin="8dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewLogo"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="295dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:hint="Email"
            android:scrollbarThumbHorizontal="@color/common_google_signin_btn_text_dark_default"
            android:scrollbarThumbVertical="@color/common_google_signin_btn_text_dark_default"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textColorHint="@color/common_google_signin_btn_text_dark_default" />

        <EditText
            android:id="@+id/editTextSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextEmail"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:hint="Senha"
            android:inputType="textPassword"
            android:scrollbarThumbHorizontal="@color/common_google_signin_btn_text_dark_default"
            android:scrollbarThumbVertical="@color/common_google_signin_btn_text_dark_default"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textColorHint="@color/common_google_signin_btn_text_dark_default" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextSenha"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:fontFamily="@font/lato_black"
            android:text="Login" />

        <Button
            android:id="@+id/buttonCadastro"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonLogin"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:fontFamily="@font/lato_black"
            android:text="Cadastrar" />

    </RelativeLayout>

</ScrollView>